<%- include("partials/header.ejs") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!--Post Title-->
      <h1><%= post.title %></h1>
      <p class="text-muted">
        By <%= post.author %> on <%= post.createdAt.toLocalDateString() %>
      </p>
      <hr />

      <!--Post Content-->
      <div class="post-content">
        <p><%= post.content %></p>
      </div>

      <!--Edit/Delete Options (visible only to the post author)-->
      <% if (locals.user && post.author === locals.user.username) { %>
  <a href="/posts/edit/<%= post.id %>" class="btn btn-primary">Edit</a>
  <form method="POST" action="/posts/delete/<%= post.id %>" style="display:inline;">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
<% } %>
    </div>
  </div>
</div>

<%- include("partials/header.ejs") %>
